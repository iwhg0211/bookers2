<div class="container">
    <div class="row">
       <div class="col-md-3">

            <%= render 'users/list', user: @user %>

            <h1>New book</h1>

            <%= form_with model: @book_new, url: books_path do |f| %>

            <p>Title</p>
            <%= f.text_field :title %>

            <p>Opinion</p>
            <%= f.text_field :body %>

            <%= f.submit 'Create Book',class:"btn btn-success" %>

            <% end %>

       </div>
       <div class="col-md-8 offset-md-1">
            <h1>Book detail</h1>
            <table>
             <tbody>
              <tr>
               <td><% if @user.profile_image.attached? %>
                    <%= image_tag @user.profile_image, size: "100×100" %>
                   <% else %>
                    <%= image_tag 'no_image', size: "100×100" %>
                   <% end %></br>
                   <%= link_to @user.name, user_path(@user) %>
               </td>
               <td><%= link_to @book.title, book_path(@book) %></td>
               <td><%= @book.body %></td>
               <td>
                <% if @book.user == current_user %>
                 <%= link_to 'Edit', edit_book_path(@book), class:"btn btn-sm btn-success"%>
                <% end %>
               </td>
               <td>
                <% if @book.user == current_user %>
                 <%= link_to 'Destroy', book_path(@book), method: :delete, "data-confirm"=>"本当に消しますか？", class:"btn btn-sm btn-danger" %>
                <% end %>
               </td>
              </tr>
             </tbody>
            </table>
       </div>
    </div>
</div>