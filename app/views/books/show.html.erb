<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <h1>User info</h1>

            <% if @user.profile_image(@user).attached? %>
             <%= image_tag @user.profile_image(@user), size: "200×200" %>
            <% else %>
             <%= image_tag 'no_image', size: "200×200" %>
            <% end %>

            <p><%= @user.name %></p>

            <p><%= @user.introduction %></p>

            <%= link_to 'edit', edit_user_path(@user.id) %>


            <h1>New Book</h1>

            <%= form_with model: @book, url: books_path do |f| %>

            <label>Title</label>
            <%= f.text_field :text %>

            <label>Opinion</label>
            <%= f.text_field :opinion %>

            <%= f.submit 'Create Book',class:"btn btn-success" %>

            <% end %>

        </div>
        <div class="col-lg-8">
            <h1>Books</h1>
            <table>
             <thead>
              <tr>
               <th></th>
               <th>Title</th>
               <th>Opinion</th>
              </tr>
             </thead>
             <tbody>
              <% @books.each do |book| %>
              <tr>
               <td><%= link_to user_path(@user) do %>
                     <%= image_tag @user.get_profile_image(200,200) %>
                    <% end %>
               </td>
               <td><%= book.title %></td>
               <td><%= link_to @book.title, book_path(book) %></td><%# コメントアウト >test1て投稿したのに	/books/1と表示される<% end %>
               <td><%= @book.body %></td><%# コメントアウト >何も表示されない<% end %>
              </tr>
              <% end %>
             </tbody>
            </table>
        </div>

    </div>
</div>