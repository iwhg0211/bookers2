<h1>Editing Book</h1>

<%= form_with model: @book, url:  book_path(@book)  do |f|%>

<p>Title</p>
<%= f.text_field :title %>

<p>Opinion</p>
<%= f.text_field :opinion %>

<%= f.submit 'Update Book', class:"btn btn-success" %>

<% end %>

<%= link_to 'Show', book_path(@book) %>
<%= link_to 'Back', books_path %>