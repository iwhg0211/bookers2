<%= render 'users/list', user: @user %>

<h1>New Book</h1>

 <%= form_with model: @book, url: books_path do |f| %>

<p>Title</p>
<%= f.text_field :title %>

<pl>Opinion</p>
<%= f.text_field :body %>

<%= f.submit 'Create Book',class:"btn btn-success" %>

<% end %>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <tbody>
    <tr>
      <td>
        <% if user.profile_image.attached? %>
          <%= image_tag user.profile_image, size: "100×100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100×100" %>
        <% end %>
      </td>
      <td><%= user.name %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
    </tr>
  </tbody>
  <% end %>
</table>