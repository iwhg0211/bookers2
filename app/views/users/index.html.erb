<div class="container">
    <div class="row">
        <div class="col-md-3">

          <%= render 'users/list', user: @user %>

          <h1>New book</h1>

          <%= form_with model: @book, url: books_path do |f| %>

          <p>Title</p>
          <%= f.text_field :title %>

          <p>Opinion</p>
          <%= f.text_field :body %>

          <%= f.submit 'Create Book',class:"btn btn-success" %>

          <% end %>

        </div>
        <div class="col-md-8 offset-md-1">

         <h1>Users</h1>

         <table class="table table-striped">
           <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
          <tbody>
            <tr>
              <td>
                <% if user.profile_image.attached? %>
                  <%= image_tag user.profile_image, size: "100×100" %>
                <% else %>
                  <%= image_tag 'no_image', size: "100×100" %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user_path(user) %></td>
            </tr>
          </tbody>
          <% end %>
         </table>

        </div>

    </div>
</div>