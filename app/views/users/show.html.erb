<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">

   <%= render 'users/list', user: @user %>


   <h1>New book</h1>

   <%= form_with model: @book, url: books_path  do |f| %>

   <p>Title</p>
    <%= f.text_field :title %>

   <p>Opinion</p>
    <%= f.text_field :body %>

    <%= f.submit 'Create Book',class:"btn btn-success" %>

   <% end %>

  </div>
  <div class="col-md-8 offset-md-1">
   <h1>Books</h1>
    <table class="table table-hover table-inverse">
     <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
      </tr>
     </thead>
     <tbody>
       <% @books.each do |book| %>
       <tr>
        <td><% if @user.profile_image.attached? %>
             <%= image_tag @user.profile_image, size: "100×100" %>
            <% else %>
             <%= image_tag 'no_image', size: "100×100" %>
            <% end %>
             <%= link_to @user.profile_image, user_path(@user) %>
        </td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
       </tr>
       <% end %>
     </tbody>
    </table>
  </div>
 </div>
</div>