<h1>User info</h1>

<%= form_with model: @user, url: 'edit_user_path' do |f| %>

<label>name</label>
<%= f.text_field :name %>

<label>image</label>
<%= f.file_field :image, accept: "image/*"  %>

<label>introduction</label>
<%= f.text_field :introduction %>

<%= f.submit 'Update User' %>

<% end %>