            <% if user.profile_image.attached? %>
              <%= image_tag user.profile_image, size: "100×100" %>
            <% else %>
              <%= image_tag 'no_image', size: "100×100" %>
            <% end %>

            <table>
             <thead>
              <tr>
               <th>name</th>
               <th>introduction</th>
              </tr>
             </thead>
             <tbody>
              <tr>
               <td><%= user.name %></td>
               <td><%= user.introduction %></td>
              </tr>
             </tbody>
            </table>

            <%= link_to 'edit', edit_user_path(user.id) %>
